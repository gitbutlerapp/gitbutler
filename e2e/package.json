{
	"name": "@gitbutler/e2e",
	"type": "module",
	"devDependencies": {
		"@playwright/test": "1.58.2",
		"@types/node": "^22.19.11",
		"@wdio/cli": "^9.24.0",
		"@wdio/globals": "^9.23.0",
		"@wdio/local-runner": "^9.24.0",
		"@wdio/mocha-framework": "^9.24.0",
		"@wdio/spec-reporter": "^9.24.0",
		"@wdio/types": "^9.24.0",
		"wdio-video-reporter": "^6.0.0"
	},
	"scripts": {
		"install-playwright": "pnpm exec playwright install",
		"test:e2e": "pnpm test:e2e:not-tauri",
		"test:e2e:not-tauri": "wdio run ./web/wdio.web.conf.ts",
		"test:e2e:blackbox": "wdio run ./blackbox/wdio.blackbox.conf.ts",
		"test:e2e:playwright": "pnpm exec playwright test --config ./playwright/playwright.config.ts --tsconfig ./playwright/tsconfig.json",
		"test:e2e:playwright:open": "PLAYWRIGHT_UI=1 pnpm exec playwright test --config ./playwright/playwright.config.ts --tsconfig ./playwright/tsconfig.json --ui"
	},
	"dependencies": {
		"@gitbutler/ui": "workspace:*",
		"get-port": "^7.1.0",
		"tmp-promise": "^3.0.3"
	}
}
