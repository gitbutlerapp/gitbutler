{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "main",
	"description": "permissions for gitbutler tauri",
	"windows": ["main"],
	"local": true,
	"permissions": [
		"core:default",
		"core:window:allow-start-dragging",
		"core:window:default",
		"dialog:allow-open",
		"fs:allow-read-file",
		"fs:allow-cache-read-recursive",
		"log:default",
		"process:default",
		"shell:allow-open",
		"store:default",
		"updater:default",
		"http:allow-fetch",
		{
      "identifier": "http:default",
      "allow": [{ "url": "http://127.0.0.1:*" }, { "url": "http://localhost:*" }]
    }
	]
}
