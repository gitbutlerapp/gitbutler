{
	"extends": ["../../tsconfig.base.json", "./.svelte-kit/tsconfig.json"],
	"compilerOptions": {
		"checkJs": true,
		"types": ["vitest/importMeta", "vitest/jsdom"]
	},
	"include": [
		"vitest-setup.js",
		".svelte-kit/ambient.d.ts",
		".svelte-kit/non-ambient.d.ts",
		".svelte-kit/types/**/$types.d.ts",
		"vite.config.js",
		"vite.config.ts",
		"postcss.config.js",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"cypress.config.ts",
		"cypress/**/*.ts",
		"src/**/electron.d.ts"
	]
}
