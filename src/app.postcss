@import 'inter-ui/inter.css';
@tailwind base;
@tailwind components;
@tailwind utilities;

/* BOILERPLATE CSS */
a,
button {
	@apply cursor-default;
	-webkit-user-select: none;
	-webkit-user-drag: none;
	-webkit-app-region: no-drag;
	cursor: default;
}

textarea,
input {
	@apply rounded border border-zinc-600 bg-zinc-700 p-2 text-zinc-100;
}
textarea:focus,
input:focus {
	outline: none;
	@apply hover:border-zinc-500/80;
	@apply focus:ring-2 focus:ring-blue-600/30;
	@apply focus:border-[1px] focus:focus:border-blue-600;
}

.drag-none {
	-webkit-user-select: none;
	-webkit-user-drag: none;
	-webkit-app-region: no-drag;
	cursor: default;
}

/* OUTLINE REMOVAL  */
.outline-none-important {
	@apply outline-none focus:outline-none active:outline-none;
	outline: none;
}
.outline-none-important:focus {
	outline: none;
	-webkit-appearance: none;
	outline: 0;
	outline-offset: 0;
	box-shadow: rgb(255, 255, 255) 0px 0px 0px 0px, rgba(37, 99, 235, 0) 0px 0px 0px 2px,
		rgba(0, 0, 0, 0) 0px 0px 0px 0px;
}
.outline-none-important::before {
	outline: none;
	-webkit-appearance: none;
	outline: 0;
	outline-offset: 0;
	box-shadow: rgb(255, 255, 255) 0px 0px 0px 0px, rgba(37, 99, 235, 0) 0px 0px 0px 2px,
		rgba(0, 0, 0, 0) 0px 0px 0px 0px;
}

/* SCROLL BAR STYLING */

/* width */
::-webkit-scrollbar {
	width: 8px;
	height: 8px;
}

/* Track */
::-webkit-scrollbar-track {
	border-radius: 2px;
}

/* Handle */
::-webkit-scrollbar-thumb {
	/* background: #44444A;  */
	background: rgba(255, 255, 255, 0.1);
	border-radius: 10px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
	background: rgba(255, 255, 255, 0.3);
}
.scrollbar-hidden::-webkit-scrollbar {
	-webkit-appearance: none;
	width: 0;
	height: 0;
}
.scrollbar-hidden::-webkit-scrollbar {
	-webkit-appearance: none;
	width: 0;
	height: 0;
}

/* SIDE BAR */
.side-panel {
	@apply h-full w-[424px] border-r  border-zinc-700;
}

/* MAIN CONTENT CONTAINER */
.main-content-container {
	@apply flex h-full w-2/3 flex-auto flex-col;
}

/* CARD STYLING */
.card {
	@apply rounded border-[0.5px] border-gb-700 bg-card-default shadow;
	/* background-image: url("http://api.thumbr.it/whitenoise-361x370.png?background=212121ff&noise=4d4d4d&density=40&opacity=100"); */
	/* background-opacity: 0.1; */
	/* background-image: url(data:image/png;base64,);  */
}

/* MODAL */
.modal {
	@apply rounded-lg border-[0.5px] border-modal-stroke;
	backdrop-filter: blur(10px);
	background-color: rgb(36 36 41 / 0.8);
	/* Note: backdrop-filter has minimal browser support */
}

/* TERMINAL */
#terminal {
	padding-right: 4px;
	background-color: black;
}
.terminal {
	height: 100%;
	width: 100%;
	@apply p-4;
}
.xtrem {
	height: 100%;
	width: 100%;
}
.xterm-viewport {
}
.xterm-scroll-area {
	padding: 24px;
}
.xterm-screen {
	width: 100% !important;
}
