{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"package": {
			"dependsOn": ["^package"],
			"outputs": ["dist/**"]
		},
		"build": {
			"dependsOn": ["package"],
			"passThroughEnv": ["SENTRY_AUTH_TOKEN", "GITHUB_TOKEN"],
			"env": ["SENTRY_RELEASE"],
			"outputs": [
				".svelte-kit/**",
				"!.sveltekit/types",
				"!.sveltekit/*.d.ts",
				"dist/**",
				".vercel/**"
			]
		},
		"dev": {
			"dependsOn": ["package"],
			"cache": false,
			"persistent": true
		},
		"check": {
			"dependsOn": ["package"]
		},
		"playwright:install": {},
		"test": {
			"dependsOn": ["package", "playwright:install"]
		},
		"test:e2e:web": {
			"dependsOn": ["package"]
		},
		"//#globallint": {
			"dependsOn": ["@gitbutler/ui#package", "@gitbutler/shared#package"]
		}
	}
}
