{
	"name": "@gitbutler/ui",
	"version": "0.0.2",
	"description": "GitButler Component Library",
	"keywords": [
		"components",
		"documentation",
		"Svelte",
		"SvelteKit"
	],
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm check --watch",
		"dev:package:svelte": "svelte-kit sync && svelte-package --watch",
		"dev:package:styles": "postcss ./src/styles/main.css -o ./dist/styles/main.css --watch",
		"package": "pnpm run --sequential \"/^package:.*/\"",
		"package:svelte": "svelte-kit sync && svelte-package",
		"package:styles": "pnpm run sync:tokens && pnpm run sync:fonts && postcss ./src/styles/main.css -o ./dist/styles/main.css && npm run package:fonts",
		"package:fonts": "cp -r ./src/styles/fonts ./dist/styles/",
		"sync:tokens": "cp node_modules/@gitbutler/design-core/tokens/tokens.css src/styles/tokens.css",
		"sync:fonts": "cp node_modules/@gitbutler/design-core/fonts/fonts.css src/styles/fonts/fonts.css && cp -r node_modules/@gitbutler/design-core/fonts/but-head src/styles/fonts/ 2>/dev/null || true",
		"prepublishOnly": "pnpm run package",
		"prepare": "svelte-kit sync && pnpm run sync:tokens && pnpm run sync:fonts",
		"storybook": "storybook dev --no-open -p 6006",
		"storybook:build": "storybook build",
		"test": "vitest run --mode development",
		"test:watch": "vitest --watch --mode development",
		"playwright:install": "playwright install --with-deps chromium"
	},
	"devDependencies": {
		"@codemirror/lang-cpp": "^6.0.3",
		"@codemirror/lang-css": "^6.3.1",
		"@codemirror/lang-html": "^6.4.9",
		"@codemirror/lang-java": "^6.0.2",
		"@codemirror/lang-javascript": "^6.2.4",
		"@codemirror/lang-json": "^6.0.2",
		"@codemirror/lang-markdown": "^6.3.4",
		"@codemirror/lang-php": "^6.0.2",
		"@codemirror/lang-python": "^6.2.1",
		"@codemirror/lang-rust": "^6.0.2",
		"@codemirror/lang-vue": "^0.1.3",
		"@codemirror/lang-wast": "^6.0.2",
		"@codemirror/lang-xml": "^6.1.0",
		"@codemirror/language": "^6.11.2",
		"@codemirror/legacy-modes": "^6.5.1",
		"@csstools/postcss-bundler": "^2.0.8",
		"@lezer/common": "^1.2.3",
		"@lezer/highlight": "^1.2.1",
		"@replit/codemirror-lang-svelte": "^6.0.0",
		"@storybook/addon-docs": "^9.1.1",
		"@storybook/addon-links": "^9.1.1",
		"@storybook/addon-svelte-csf": "5.0.7",
		"@storybook/addon-vitest": "9.0.18",
		"@storybook/experimental-addon-test": "^8.6.14",
		"@storybook/sveltekit": "^9.1.1",
		"@sveltejs/adapter-static": "catalog:svelte",
		"@sveltejs/kit": "catalog:svelte",
		"@sveltejs/package": "catalog:svelte",
		"@sveltejs/vite-plugin-svelte": "catalog:svelte",
		"@types/diff-match-patch": "^1.0.36",
		"@types/postcss-pxtorem": "^6.1.0",
		"@vitest/browser": "catalog:",
		"autoprefixer": "^10.4.21",
		"cpy-cli": "^5.0.0",
		"cssnano": "^7.1.0",
		"dayjs": "^1.11.13",
		"diff-match-patch": "^1.0.5",
		"isomorphic-dompurify": "^2.26.0",
		"marked": "catalog:",
		"playwright": "1.54.1",
		"postcss": "catalog:postcss",
		"postcss-cli": "catalog:postcss",
		"postcss-nesting": "catalog:postcss",
		"postcss-pxtorem": "catalog:postcss",
		"rimraf": "^6.0.1",
		"storybook": "^9.1.1",
		"svelte": "catalog:svelte",
		"svelte-check": "catalog:svelte",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"peerDependencies": {
		"svelte": "^4.0.0 || ^5.0.0-0"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./*.svelte": {
			"svelte": "./dist/*.svelte",
			"types": "./dist/*.svelte.d.ts"
		},
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		},
		"./*.css": {
			"import": "./dist/styles/*.css"
		},
		"./*.json": {
			"import": "./dist/*.json",
			"types": "./dist/*.json"
		}
	},
	"files": [
		"./dist/*.svelte",
		"./dist/*.json",
		"./dist/*.js",
		"./dist/*.json",
		"./dist/*.d.ts",
		"!./dist/*.test.*",
		"./dist/*.css",
		"./dist/styles/fonts/**/*.woff2"
	],
	"dependencies": {
		"@giphy/js-fetch-api": "^5.7.0",
		"@giphy/js-types": "^5.1.0",
		"@giphy/svelte-components": "^1.1.0",
		"@gitbutler/core": "workspace:*",
		"@gitbutler/design-core": "github:gitbutlerapp/design-core#1.0.2",
		"@lexical/link": "0.27.1",
		"@lexical/list": "0.27.1",
		"@lexical/markdown": "0.27.1",
		"@lexical/rich-text": "0.27.1",
		"@lexical/selection": "0.27.1",
		"@lexical/text": "0.27.1",
		"@lexical/utils": "0.27.1",
		"emojibase": "^16.0.0",
		"emojibase-data": "^16.0.3",
		"install": "^0.13.0",
		"lexical": "0.27.1",
		"svelte-lexical": "0.5.3"
	}
}
