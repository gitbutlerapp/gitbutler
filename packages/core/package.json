{
	"name": "@gitbutler/core",
	"version": "0.0.1",
	"description": "Core utilities and types shared across GitButler packages",
	"type": "module",
	"scripts": {
		"check": "tsc --noEmit",
		"build": "tsc -p tsconfig.json",
		"format": "prettier --write .",
		"generate-ts": "TS_RS_EXPORT_DIR=\"$PNPM_SCRIPT_SRC_DIR/src/generated\" cargo test --features export-ts export_bindings && pnpm format",
		"package": "tsc -p tsconfig.json"
	},
	"exports": {
		"./api": {
			"import": "./dist/generated/index.js",
			"types": "./dist/generated/index.d.ts"
		},
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"typescript": "catalog:",
		"svelte": "catalog:svelte"
	},
	"dependencies": {
		"svelte": "catalog:svelte"
	}
}
