{
	"name": "@gitbutler/but-sdk",
	"version": "0.0.1",
	"description": "GitButler JS but SDK",
	"type": "module",
	"main": "./src/generated/index.js",
	"types": "./src/generated/index.d.ts",
	"scripts": {
		"artifacts": "napi artifacts",
		"build:types": "cargo run -p but-ts -- --output ./src/generated/index.d.ts",
		"build:napi": "napi build --platform --release --esm --manifest-path ../../crates/but-napi/Cargo.toml --js index.js --dts index.d.ts --output-dir ./src/generated/.",
		"build": "pnpm build:napi && pnpm build:types",
		"build:debug": "napi build --platform --esm --manifest-path ../../crates/but-napi/Cargo.toml --js index.js --dts index.d.ts --output-dir . --verbose",
		"check": "tsc -p tsconfig.generated.json --noEmit",
		"prepublishOnly": "napi prepublish -t npm",
		"testTypes": "ts-node ./src/test.ts",
		"universal": "napi universal"
	},
	"napi": {
		"binaryName": "gitbutler-sdk",
		"targets": [
			"x86_64-apple-darwin",
			"aarch64-apple-darwin",
			"x86_64-unknown-linux-gnu",
			"x86_64-pc-windows-msvc"
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gitbutlerapp/gitbutler.git",
		"directory": "packages/but-sdk"
	},
	"keywords": [
		"git",
		"gitbutler",
		"version-control",
		"napi-rs",
		"native"
	],
	"author": "GitButler <gitbutler@gitbutler.com>",
	"license": "FSL-1.1-MIT",
	"engines": {
		"node": ">= 18"
	},
	"devDependencies": {
		"@napi-rs/cli": "^3.5.1",
		"ts-node": "^10.9.2"
	},
	"files": [
		"./src/generated/index.js",
		"./src/generated/index.d.ts",
		"./src/generated/*.node"
	],
	"exports": {
		".": {
			"import": {
				"types": "./src/generated/index.d.ts",
				"default": "./src/generated/index.js"
			},
			"require": {
				"types": "./src/generated/index.d.ts",
				"default": "./src/generated/index.js"
			}
		}
	}
}
